<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageCropView.MAUI.ImageCropView" xmlns:local="clr-namespace:ImageCropView.MAUI"
             >
    <Grid x:Name="_root" HorizontalOptions="Fill" VerticalOptions="Fill" IsClippedToBounds="True" Background="White">
        <GraphicsView x:Name="gv" InputTransparent="True"/>
        <Image x:Name="image" InputTransparent="True" HorizontalOptions="Start" VerticalOptions="Start"  />
        <Border x:Name="frameContainer" StrokeThickness="0" InputTransparent="True" />
    </Grid>
</ContentView>
